<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.monitor_profile.MonitorMyDataFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="22 Anos"
        android:textSize="18sp"
        android:layout_marginTop="300dp"
        android:gravity="center_horizontal"
        android:id="@+id/MonitorProfileAgeTxt"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/MonitorProfileAgeTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="PUC - CORAÇÃO EUCARÍSTICO"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:id="@+id/monitorProfileUniversityTxt"

        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/monitorProfileUniversityTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="(31)9 9000-0000"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:id="@+id/monitorProfilePhoneTxt"

        />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monitorProfilePhoneTxt"
        android:id="@+id/mProfileChipGroup"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        >

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mProfileChipGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Editar Matérias"
        android:id="@+id/editSubjectsBtn"
        android:backgroundTint="#08D9D6"
        app:cornerRadius="15dp"
        app:strokeColor="#08D9D6"
        app:rippleColor="#0F8881"
        android:textColor="#ffffff"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editSubjectsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Alterar senha"
        android:id="@+id/monitorEditPasswordBtn"
        android:backgroundTint="#08D9D6"
        app:cornerRadius="15dp"
        app:strokeColor="#08D9D6"
        app:rippleColor="#0F8881"
        android:textColor="#ffffff"
        />


</androidx.constraintlayout.widget.ConstraintLayout>